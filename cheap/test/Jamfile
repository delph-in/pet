CC = gcc ;
C++ = g++ ;

C++FLAGS += -g -Wall ;
CFLAGS += -g -Wall ;

LINK = g++ ;

OPTIM = -O3 ;

TESTERSOURCES = tester.cpp paths.cpp ../paths.cpp ;
HDRS += .. ../../common ;

LINKFLAGS on tester += -L/usr/local/lib ;
LINKLIBS on tester = -lm -lstdc++ -liberty -lcppunit ;

Main tester : $(TESTERSOURCES) ; 
